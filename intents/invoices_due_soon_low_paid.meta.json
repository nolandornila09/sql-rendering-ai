{
  "template_id": "invoices_due_soon_low_paid",
  "description": "Invoices due in the next N days where paid ratio < 50% (at-risk).",
  "required_filters": ["tenant_id", "as_of_date"],
  "defaults": {
    "due_in_days": 7,
    "min_unpaid_pct": 0.5,
    "min_amount": 100,
    "sort_direction" : "DESC",
    "limit" : 100
  },
  "projected_columns": [
    "invoice_id",
    "customer_id",
    "invoice_date",
    "due_date",
    "amount",
    "paid_to_date",
    "paid_ratio",
    "unpaid_ratio",
    "last_payment_date",
    "status"
  ],
  "partitions": ["yyyy_mm"],
  "parquet_views": {
    "v_invoices_ledger": "v_invoices_ledger.parquet"
  }
}
