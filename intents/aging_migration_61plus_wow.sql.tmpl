WITH weekly_aging AS (
    SELECT
        customer_id,
         DATEADD(WEEK, DATEDIFF(WEEK, 0, CAST(as_of_date AS DATE)), 0) AS week_start,
        SUM(bucket_61_90 + bucket_90_plus) AS overdue_61_plus
    FROM curated.v_ar_aging_bucketed_daily
    WHERE tenant_id = @tenant_id
      AND CAST(as_of_date AS DATE) BETWEEN dateadd(DAY, -(@weeks * 7),CAST(@as_of_date AS DATE))
                AND CAST(@as_of_date AS DATE)
    GROUP BY customer_id, DATEADD(WEEK, DATEDIFF(WEEK, 0, CAST(as_of_date AS DATE)), 0)
),
deltas AS (
    SELECT
        customer_id,
        week_start,
        overdue_61_plus,
        overdue_61_plus - LAG(overdue_61_plus) OVER (PARTITION BY customer_id ORDER BY week_start) AS delta_wow
    FROM weekly_aging
)
SELECT TOP @limit
    customer_id,
    week_start,
    overdue_61_plus,
    delta_wow
FROM deltas
WHERE delta_wow >=  @min_delta 
ORDER BY
CASE WHEN @sort_direction = 'ASC'  THEN delta_wow
         ELSE -delta_wow
    END;
